{
  "$schema": "https://raw.githubusercontent.com/hougesen/mdsf/main/schemas/v0.9.5/mdsf.schema.json",
  "format_finished_document": false,
  "javascript_runtime": "node",
  "on_missing_tool_binary": "fail-fast",
  "on_missing_language_definition": "fail",
  "runners": {
    "bunx": true,
    "uv": true
  },
  "languages": {
    "css": [["biome:format", "stylelint"]],
    "html": [["superhtml:fmt", "djlint"]],
    "javascript": ["biome:check:unsafe"],
    "json": ["biome:format"],
    "jsonc": ["biome:format"],
    "shell": [["shfmt", "beautysh"]],
    "sh": [["shfmt", "beautysh"]],
    "bash": [["shfmt"]],
    "typescript": ["biome:check:unsafe"],
    "yaml": [["prettier", "yamlfmt", "yamlfix"]]
  }
}
